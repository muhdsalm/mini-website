---
layout: "details.liquid"
---

{% if icon %}
    <div class="w-screen h-screen">
        <img src="https://minilanguage.com/mini-logo.svg" alt="Home" class="inline align-middle" style="width: 15rem; height: 15rem; margin-top: 7%">
        <h1 class="poppins-bold text-5xl">{{title}}</h1>
        <h1 class="poppins-italic text-5xl">{{title_mini}}</h1>
        {% if noScroll == false %}
            <div class=" mt-16 text-xl text-gray-400"><i class="bi bi-chevron-double-down inline text-3xl align-middle"></i> <p class="inline align-middle poppins-regular">Scroll Down</p> <i class="bi bi-chevron-double-down inline text-3xl align-middle"></i></div>
        {% endif %}
    </div>

    <div class=" w-3/5 m-auto text-2xl poppins-regular text-gray-600 mt-10">
        <p>{{description}}</p>
    </div>

{% else %}
    <div class="w-screen h-screen">
        <img class="inline align-middle opacity-0" style="width: 15rem; height: 4rem; margin-top: 7%">
        <h1 class="poppins-bold text-5xl">{{title}}</h1>
        <h1 class="poppins-italic text-5xl -mt-5">{{title_mini}}</h1>
        <div class=" w-3/5 m-auto text-3xl poppins-regular text-gray-800 mt-10">
        <p>{{description}}</p>
        </div>
        {% if noScroll == false %}
            <div class=" mt-16 text-xl text-gray-400"><i class="bi bi-chevron-double-down inline text-3xl align-middle"></i> <p class="inline align-middle poppins-regular">Scroll Down</p> <i class="bi bi-chevron-double-down inline text-3xl align-middle"></i></div>
        {% endif %}
    </div>
{% endif %}